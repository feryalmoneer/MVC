@model OrderVM
<h4> Edit Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" >

            <div class="form-group">
                <label asp-for="OrderName" class="control-label"></label>
                <input asp-for="OrderName" class="form-control" />
                <span asp-validation-for="OrderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDateCreated" class="control-label"></label>
                <input asp-for="OrderDateCreated" class="form-control" />
                <span asp-validation-for="OrderDateCreated" class="text-danger"></span>
            </div>
            <br />
      <button class="btn btn-secondary" type="submit">UPDATE</button>
        </form>
    </div>
</div>
